{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "module": "ESNext",
    "target": "ES2019",
    "declarationDir": "dist",
    "isolatedModules": false,
    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": ["lib"],
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"]
}
